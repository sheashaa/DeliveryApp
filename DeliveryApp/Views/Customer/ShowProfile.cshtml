@model DeliveryApp.Models.ApplicationUser
@{
    ViewBag.Title = "ShowProfile";
}

<h2>ShowProfile</h2>

<div class="form-group">
    <h4>Image</h4>
    <p>@Model.Image</p>
</div>

<div class="form-group">
    <h4>User Name</h4>
    <p>@Model.UserName</p>
</div>

<div class="form-group">
    <h4>Email</h4>
    <p>@Model.Email</p>
</div>

<div class="form-group">
    @if (ViewBag.newOrder != null)
    {
        <h4>New Order</h4>
        <p>@ViewBag.newOrder</p>
    }
</div>

<div class="form-group">
    @if (ViewBag.newOrder != null)
    {
        <h4>Old Orders</h4>
        <p>@ViewBag.oldOrder</p>
    }
</div>

<a href="/Customer/EditProfile" class="btn btn-primary">Edit</a>
